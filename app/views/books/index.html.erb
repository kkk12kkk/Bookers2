<% if flash[:alert].present? %>
  <div class="alert alert-danger">
    <%= flash[alert] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
       <%= render 'books/book', books: @books, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
       <h1>Books</div>
          <table class="table">
            <thead>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </thead>
            <tbody>
            <% @users.each do |user| %>
            <% user.books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100, 100) %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%= render 'books/footer' %>
<h1>Editing Book</h1>

<%= form_with model: @book, local: true do |f| %>
  <% if @book.errors.any? %>
    <%= render "error", model: @book %>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br>
    <%= f.text_area :body, rows: 6 %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book',  class: "btn btn-success"   %>
  </div>
<% end %>
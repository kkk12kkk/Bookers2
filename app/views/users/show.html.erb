<!-- app/views/users/show.html.erb -->
<head>
  <body>
    <main>
      <p id="notice">Signed in successfully.</p>
       <div class="container px-5 px-sm-0">
        <div class="row">
         <div class="col-md-3">
           <h2>User info</h2>
           <table class="table"></table>
           <div class="row"></div>
           <h2 class="mt-3">New book</h2>
           <from action="/bookers2/books" accept-charset="UTF-8" method="post"></from>
         </div>
         <div class="col-md-8 offset-md-1"></div> 
       </div>
     </div>
   </main>     
   <footer>
     <div class="container mt-5">
      <div class="row"></div>
     </div>
   </footer>  




<h2>タイトル</h2>
<% @books.each do |book| %>
  <p><%= book.title %></p>
<% end %>
<h2>本文</h2>
<% @books.each do |book| %>
  <p><%= book.body %></p>
<% end %>
<h2>画像</h2>
<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "300x300" %>
<% else %>
  <%= image_tag "no_image", size: "300x300" %>
<% end %>
<%= link_to "編集", edit_user_path(@user.id) %>
<%= link_to "削除", user_path(@user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.image, size: "100x100" if @user.image.attached? %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
<hr>
<h2>投稿一覧</h2>
<% @books.each do |book| %>
  <div class="book">
    <p>タイトル: <%= book.title %></p>
    <p>本文: <%= book.body %></p>
    <p>投稿者: <%= book.user.name %></p>
    <p>投稿日: <%= l(book.created_at, format: :short) %></p>
    <%= link_to "詳細", book_path(book) %>
  </div>
<% end %>
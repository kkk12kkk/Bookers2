<h2>User info</h2>
<% if user.image.attached? %>
<%= image_tag user.image, size: "100x100" %>
<% else %>
  <%= image_tag "no_image", size: "100x100" %>
<% end %>
<table class="table">
  <tbody>
    <tr>
      <th scope="row">name</th>
      <td>
      <%=user.name %>
      </td>
    </tr>
    <tr>
      <th scope="row">introduction</th>
      <td>
      <%=user.introduction %>
      </td>
    </tr>
  </tbody>
</table>
<div class="row">
</div>
<h2 class="mt-3">New book</h2>
<from action="/bookers2/books" accept-charset="UTF-8" method="post"></from>
<div class="container">
    <div class="row">
    <div class="col-md-3">
       <%= render 'books/book', books: @books,user: @user %>
    </div>

    <div class="col-md-8 offset-md1">

    <h1>Users</h1>
      <table class="table">
       <thead>
          <tr>
            <th>Books</th>
            <th>Title</th>
            <th></th>
          </tr>
          <% @books.each do |book| %
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= book.user.name %></td>
            
            <td>
              <% if book.user ==current_user %>
                <%= link_to 'show', user_path(current_user) %>
              <% else %>
                <%= link_to 'show', user_path(book.user) %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>

<%= render 'books/footer' %>

<h1>投稿一覧</h1>
<% @users.each do |user| %>

    <p>タイトル</p>
    <span>
      <%=link_to user.name, user_path(user.id) %>
    </span>

 <table class="table table-striped">
    <p>画像</p>
    <% if user.image.attached? %>
      <%= image_tag user.image, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
 </table>
<% end %>
